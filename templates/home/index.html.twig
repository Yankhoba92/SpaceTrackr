{# templates/room/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Tous les rooms{% endblock %}

{% block body %}
    <h1>Tous les rooms</h1>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Ville</th>
                <th>Code Postal</th>
                <th>Adresse</th>
                <th>Capacit√©</th>
                <th>Description</th>
                <th>Prix</th>
                <!-- Ajoutez d'autres colonnes au besoin -->
            </tr>
        </thead>
        <tbody>
            {% for room in rooms %}
                <tr>
                    <td>{{ room.name }}</td>
                    <td>{{ room.city }}</td>
                    <td>{{ room.zipCode }}</td>
                    <td>{{ room.address }}</td>
                    <td>{{ room.capacity }}</td>
                    <td>{{ room.description }}</td>
                    <td>{{ room.price }}</td>
                    <!-- Ajoutez d'autres colonnes au besoin -->
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
